{
  "name": "pwd-companion",
  "description": "A companion application for pwd-racemanager",
  "author": "Michael Rommel",
  "version": "0.2.3-beta",
  "license": "MIT",
  "repository": "github:michaelrommel/pwd-companion",
  "private": false,
  "dependencies": {
    "@blueprintjs/core": "^3.15.1",
    "@blueprintjs/datetime": "^3.9.1",
    "@blueprintjs/icons": "^3.9.0",
    "@blueprintjs/select": "^3.8.1",
    "@blueprintjs/table": "^3.5.0",
    "@blueprintjs/timezone": "^3.4.0",
    "electron-is-dev": "^1.1.0",
    "electron-log": "^3.0.6",
    "electron-updater": "^4.0.6",
    "formik": "^1.5.7",
    "memoize-one": "^5.0.4",
    "network": "^0.4.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-icons": "^3.7.0",
    "react-svg": "^10.0.6",
    "react-svgmt": "^1.1.8",
    "reflexbox": "^3.0.1",
    "restify": "^8.3.3",
    "restify-cors-middleware": "^1.1.1",
    "serialport": "^7.1.5",
    "watershed": "^0.4.0",
    "winston": "^3.2.1",
    "winston-transport-browserconsole": "^1.0.1",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^5.0.2",
    "electron-builder": "^20.43.0",
    "electron-react-devtools": "^0.5.3",
    "electron-rebuild": "^1.8.5",
    "react-devtools": "^3.6.1",
    "react-scripts": "^3.0.1",
    "standard": "^12.0.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "parser": "babel-eslint",
    "globals": [
      "describe",
      "context",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "expect",
      "fetch"
    ]
  },
  "main": "main/index.js",
  "homepage": "./",
  "build": {
    "appId": "com.michaelrommel.pwd-companion",
    "productName": "pwd-companion",
    "copyright": "(c) 2019 by Michael Rommel",
    "generateUpdatesFilesForAllChannels": true,
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "build/**/*",
      "main/**/*"
    ],
    "extraMetadata": "main/index.js",
    "npmRebuild": false,
    "detectUpdateChannel": true,
    "publish": [
      {
        "provider": "github"
      },
      {
        "provider": "generic",
        "url": "http://127.0.0.1:7654",
        "channel": "latest"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": false,
      "oneClick": false,
      "installerIcon": "assets/installerIcon.ico"
    },
    "nsisWeb": {
      "perMachine": false,
      "oneClick": false,
      "installerIcon": "assets/installerIcon.ico"
    },
    "mac": {
      "gatekeeperAssess": false
    }
  },
  "scripts": {
    "react-start": "cross-env BROWSER=none PORT=3001 react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "react-devtools": "react-devtools",
    "electron-build": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false CSC_NAME=\"Michael Rommel (QLZ6Q6Z89R)\" electron-builder",
    "release": "yarn run react-build && electron-builder",
    "build": "yarn run react-build && yarn run electron-build",
    "start": "concurrently \"cross-env BROWSER=none yarn run react-start\" \"electron .\"",
    "github": "yarn run electron-build --publish always"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
